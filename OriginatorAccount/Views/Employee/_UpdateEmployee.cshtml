@using OriginatorAccount.Models.Employee
@model VMEmployee
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript">
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript">
</script>

@using (Ajax.BeginForm("UpdateEmployee", "Employee", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "PutData", OnComplete = "CloseModal" }, new { enctype = "multipart/form-data" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h6 class="title" id="defaultModalLabel">Add Employee</h6>
        </div>
        <div class="modal-body">
            <div class="row clearfix">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.FirstName, Model.FirstName ,new { @class = "form-control", placeholder = "First Name" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.LastName, Model.LastName ,new { @class = "form-control", placeholder = "Last Name" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Designation, Model.Designation ,new { @class = "form-control", placeholder = "Designation" })
                        @Html.ValidationMessageFor(m => m.Designation, "", new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Salary, Model.Salary.ToString() ,new { @class = "form-control", placeholder = "Salary", type = "number" })
                        @Html.ValidationMessageFor(m => m.Salary, "", new { @style = "color:red" })
                    </div>
                </div>

                <div class="col-md-6 col-md-offset-3">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control", type = "file" })
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">UPDATE</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
        </div>
    </div>
}



