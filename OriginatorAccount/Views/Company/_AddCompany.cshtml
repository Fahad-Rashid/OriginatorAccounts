@using OriginatorAccount.Models.Company
@model VMCompany
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript">
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript">
</script>
@using (Ajax.BeginForm("AddCompany", "Company", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "PutData", OnComplete = "CloseModal" }))
{
<div class="modal-content">
    <div class="modal-header">
        <h6 class="title" id="defaultModalLabel">Add Company</h6>
    </div>
    <div class="modal-body">
        <div class="row clearfix">

            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Street" })
                    @Html.ValidationMessageFor(m => m.Street, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
                    @Html.ValidationMessageFor(m => m.City, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                    @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Landline, new { @class = "form-control", placeholder = "Landline" })
                    @Html.ValidationMessageFor(m => m.Landline, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", placeholder = "Mobile" })
                    @Html.ValidationMessageFor(m => m.Mobile, "", new { @style = "color:red" })
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.FaxNo, new { @class = "form-control", placeholder = "FaxNo" })
                    @Html.ValidationMessageFor(m => m.FaxNo, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Website, new { @class = "form-control", placeholder = "Website" })
                    @Html.ValidationMessageFor(m => m.Website, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Logo, new { @class = "form-control", placeholder = "Logo" })
                    @Html.ValidationMessageFor(m => m.Logo, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.NTN, new { @class = "form-control", placeholder = "NTN" })
                    @Html.ValidationMessageFor(m => m.NTN, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.STN, new { @class = "form-control", placeholder = "STN" })
                    @Html.ValidationMessageFor(m => m.STN, "", new { @style = "color:red" })
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">ADD</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
    </div>
</div>
}
