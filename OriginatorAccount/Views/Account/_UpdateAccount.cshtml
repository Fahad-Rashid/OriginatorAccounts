@using OriginatorAccount.Models.Account
@model VMAccount
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript">
</script>

<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript">
</script>

@using (Ajax.BeginForm("UpdateAccount", "Account", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "PutData", OnComplete = "CloseModal" }))
{
    <div class="modal-content">
        <div class="modal-header">
            <h6 class="title" id="defaultModalLabel">Update Account</h6>
        </div>
        <div class="modal-body">
            <div class="row clearfix">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.AccountName, Model.AccountName, new { @class = "form-control", placeholder = "AccountName" })
                        @Html.ValidationMessageFor(m => m.AccountName, "", new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.Source, new List<SelectListItem>
    {
    new SelectListItem{ Text="Bank", Value = "Bank" },
    new SelectListItem{ Text="Cash", Value = "Cash" },
    new SelectListItem{ Text="Other", Value = "Other" }
    },
               new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Source, "", new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Description", rows = "5" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @style = "color:red" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Amount, Model.Amount.ToString(), new { @class = "form-control", placeholder = "Amount", type = "number" })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @style = "color:red" })
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">UPDATE</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
        </div>
    </div>
}


