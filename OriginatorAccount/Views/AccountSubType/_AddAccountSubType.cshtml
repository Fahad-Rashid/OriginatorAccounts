@using OriginatorAccount.Models.AccountSubType
@model VMAccountSubType
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript">
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript">
</script>
@using (Ajax.BeginForm("AddAccountSubType", "AccountSubType", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "PutData", OnComplete = "CloseModal" }))
{
<div class="modal-content">
    <div class="modal-header">
        <h6 class="title" id="defaultModalLabel">Add Account Sub Type</h6>
    </div>
    <div class="modal-body">
        <div class="row clearfix">
            <div class="col-md-6">
                <div class="form-group">
                    @*@Html.Label("Work Start Time")<span class="Staric">*</span>*@
                    @Html.DropDownListFor(m => m.TypeName, new List<SelectListItem>

    {
    new SelectListItem{ Text="Assets", Value = "Assets" },
    new SelectListItem{ Text="Expense", Value = "Expense" },
    new SelectListItem{ Text="Liability", Value = "Liability" },
    new SelectListItem{ Text="Revenue", Value = "Revenue" },
    new SelectListItem{ Text="Capital", Value = "Capital" }

    },
               new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TypeName, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.SubTypeName, new { @class = "form-control", placeholder = "Sub Type Name" })
                    @Html.ValidationMessageFor(m => m.SubTypeName, "", new { @style = "color:red" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">ADD</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
    </div>
</div>
}
